<h1>New Item</h1>

<%= form_for @item do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %><br />

  <%= f.label :description %>:
  <%= f.text_field :description %><br />

  <%= f.label :price %>:
  <%= f.number_field :price, :step => 'any' %><br />

  <%= f.label :avatar %>
  <%= f.file_field :avatar %>

  <%= f.submit %>
<% end %>